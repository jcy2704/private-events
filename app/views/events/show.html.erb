<%= link_to  "< Back to events", events_path, class: "back-to" %>
<br>
<br>
<h1><%= @event.name %></h1>

<label>Event Description:</label><br />
<%= @event.description %><br /><br />
<label>Event Date:</label><br />
<%= @event.date.localtime.strftime("%Y/%m/%d %H:%M") %><br />

<br />

<h3>Attendees</h3>
<ul>
  <% @event.attendee.each do |a| %>
    <li>
      <%= a.username %>
    </li>
  <% end %>
</ul>

<% if session[:current_user] %>
  <%= form_for @attendance do |f| %>
    <%= hidden_field_tag :event_id, @event.id %>
    <%=hidden_field_tag :user_id, session[:current_user]['id'], {:id => 'user_user_id', :name => 'user[user_id]'}%>
    <%= f.submit 'Attend' %>
  <% end %>
<% end %>

<% if User.all.where.not(id: @event.attendee).where.not(id: session[:current_user]['id']).any? %>
  <h3>Invite user</h3>

  <%= form_for @attendance do |f| %>
    <%= hidden_field_tag :event_id, @event.id %>
    <%= select("user", "user_id", User.all.where.not(id: @event.attendee).where.not(id: session[:current_user]['id']).collect {|p| [ p.username, p.id ] }) %>
    <%= f.submit %>
  <% end %>
<% end %>


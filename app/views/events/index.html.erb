<h1>All Events</h1>

<% if !Event.any? %>
  <h2>No events</h2>
<% else %>
  <h2>Upcoming Events</h2>
  <ul class = "upcoming">
    <% @events.upcoming.each do |e| %>
        <li>
          <%= link_to  e.name, event_path(e.id) %>
          <div>
            <%= content_tag(:p, "Event Date: #{e.date.localtime.strftime("%Y/%m/%d")} Time: #{e.date.localtime.strftime("%H:%M")}", class: "date-time") %>
          </div>
        </li>
    <%end%>
  </ul>

  <% if @events.past.any? %>
    <h2>Past Events</h2>
    <ul class = "past">
      <% @events.past.each do |e| %>
          <li>
          <%= link_to  e.name, event_path(e.id) %>
          <div>
            <%= content_tag(:p, "Event Date: #{e.date.localtime.strftime("%Y/%m/%d")} Time: #{e.date.localtime.strftime("%H:%M")}", class: "date-time") %>
          </div>
          </li>
      <%end%>
    </ul>
  <%end%>
<% end %>
